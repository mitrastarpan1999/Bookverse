      <% if (book.cover_id) { %>
        <img class="book-cover" src="https://covers.openlibrary.org/b/id/<%= book.cover_id %>-M.jpg" alt="Book Cover" />
      <% } %>
      
      <strong class="book-title"><%= book.title %></strong>
      <div class="book-meta">
